{
  "name" : "Github Issue Previewer",
  "version" : "1.0.0",
  "manifest_version": 2,
  "description" : "make the issue can be preview in a modal without open it",
  "permissions" : [
    "https://github.com/*"
  ],
  "web_accessible_resources": ["*.ttf", "*.woff", "*.woff2"],
  "content_scripts" : [
    {
      "matches" : [
        "https://github.com/*/projects/*",
        "https://github.com/*/issues*"
      ],
      "js" : [
        "jquery-3.1.1.min.js",
        "githubExt.js"
      ],
      "css" : [
        "css/font-awesome.min.css",
        "css/spinner.css",
        "css/style.css"
      ]
    }
  ]
}
